   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="au.org.intersect.exsite9.commands.handlers.AddFolderToProjectHandler"
            commandId="au.org.intersect.exsite9.commands.AddFolderToProjectCommand">
      </handler>
      <handler
            class="au.org.intersect.exsite9.commands.handlers.AddGroupHandler"
            commandId="au.org.intersect.exsite9.commands.AddGroup">
         <enabledWhen>
            <reference
                  definitionId="au.org.intersect.exsite9.expression.OneItemSelected">
            </reference>
         </enabledWhen>
      </handler>      
	  <handler
            class="au.org.intersect.exsite9.commands.handlers.ReloadProjectHandler"
            commandId="au.org.intersect.exsite9.commands.ReloadProjectCommand">
      </handler>
   <handler
         class="au.org.intersect.exsite9.commands.handlers.DeleteGroupHandler"
         commandId="au.org.intersect.exsite9.commands.DeleteGroupCommand">
      <enabledWhen>
         <reference
               definitionId="au.org.intersect.exsite9.expression.OneItemSelected">
         </reference>
      </enabledWhen>
   </handler>
   <handler
         class="au.org.intersect.exsite9.commands.handlers.RenameGroupHandler"
         commandId="au.org.intersect.exsite9.commands.RenameGroupCommand">
      <enabledWhen>
         <reference
               definitionId="au.org.intersect.exsite9.expression.OneItemSelected">
         </reference>
      </enabledWhen>
   </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="au.org.intersect.exsite9.expression.InstanceOfProject">
         <with
               variable="selection">
            <iterate
                  ifEmpty="false"
                  operator="or">
               <instanceof
                     value="au.org.intersect.exsite9.domain.Project">
               </instanceof>
            </iterate>
         </with>
      </definition>
      <definition
            id="au.org.intersect.exsite9.expression.InstanceOfProjectOrGroup">
         <or>
            <reference
                  definitionId="au.org.intersect.exsite9.expression.InstanceOfProject">
            </reference>
            <reference
                  definitionId="au.org.intersect.exsite9.expression.InstanceOfGroup">
            </reference></or>
      </definition>
      <definition
            id="au.org.intersect.exsite9.expression.OneItemSelected">
         <with
               variable="selection">
            <count
                  value="1">
            </count>
         </with>
      </definition>
      <definition
            id="au.org.intersect.exsite9.expression.InstanceOfGroup">
         <with
               variable="selection">
            <iterate
                  ifEmpty="false"
                  operator="or">
               <and>
                  <instanceof
                        value="au.org.intersect.exsite9.domain.Group">
                  </instanceof>
                  <not>
                     <instanceof
                           value="au.org.intersect.exsite9.domain.NewFilesGroup">
                     </instanceof>
                  </not></and>
            </iterate>
         </with>
      </definition>
      <definition
            id="au.org.intersect.exsite9.expression.InstanceOfSubmissionPackage">
         <with
               variable="selection">
            <iterate
                  ifEmpty="false"
                  operator="or">
               <instanceof
                     value="au.org.intersect.exsite9.domain.SubmissionPackage">
               </instanceof>
            </iterate>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="au.org.intersect.exsite9.property.GroupNameTester"
            id="au.org.intersect.exsite9.property.GroupNameTester"
            namespace="au.org.interset.exsite9.property"
            properties="groupName"
            type="au.org.intersect.exsite9.domain.Group">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.ui.activities">
      <activity
            id="au.org.intersect.exsite9.activity.showProject"
            name="Show Project">
      </activity>
      <activityPatternBinding
            activityId="au.org.intersect.exsite9.activity.showProject"
            pattern="au.org.intersect.exsite9/au.org.intersect.exsite9.menu.metadata">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="au.org.intersect.exsite9.activity.showProject"
            pattern="au.org.intersect.exsite9/au.org.intersect.exsite9.menu.submissionpackage">
      </activityPatternBinding>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
