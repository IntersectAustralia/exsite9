               id="au.org.intersect.exsite9.menu.file"
               label="File">
            <separator
                  name="au.org.intersect.exsite9.menu.file.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="au.org.intersect.exsite9.commands.ExitCommand"
                  label="Exit"
                  style="push"
                  tooltip="Exits the application">
            </command>
         </menu>
         <menu
               id="au.org.intersect.exsite9.menu.project"
               label="Project">
            <command
                  commandId="au.org.intersect.exsite9.commands.NewProjectCommand"
                  icon="icons/icon-project-new.png"
                  label="New..."
                  style="push"
                  tooltip="Create a new project">
            </command>
            <command
                  commandId="au.org.intersect.exsite9.commands.OpenProjectCommand"
                  icon="icons/icon-project-open.png"
                  label="Open..."
                  style="push"
                  tooltip="Open an existing project">
            </command>
            <command
                  commandId="au.org.intersect.exsite9.commands.ListFoldersCommand"
                  icon="icons/icon-folder.png"
                  label="Folders..."
                  style="push"
                  tooltip="List the project folders">
            </command>
            <command
                  commandId="au.org.intersect.exsite9.commands.ReloadProjectCommand"
                  icon="icons/icon_refresh_16.png"
                  label="Refresh"
                  style="push">
            </command>
            <command
                  commandId="au.org.intersect.exsite9.commands.ExportProjectXMLCommand"
                  label="Export..."
                  style="push"
                  tooltip="Export the project&apos;s details to XML">
            </command>
         </menu>
         <menu
