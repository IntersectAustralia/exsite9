<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="au.org.intersect.exsite9.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="au.org.intersect.exsite9.Perspective"
            id="au.org.intersect.exsite9.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="au.org.intersect.exsite9.application"
            name="ExSite9">
         <property
               name="appName"
               value="ExSite9">
         </property>
      </product>
   </extension>
   <extension
         id="product1"
         point="org.eclipse.core.runtime.products">
      <product
            application="au.org.intersect.exsite9.application"
            name="ExSite9">
         <property
               name="appName"
               value="ExSite9">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="au.org.intersect.exsite9.view.ProjectExplorerView"
            id="au.org.intersect.exsite9.view.ProjectExplorerView"
            name="Project Explorer View"
            restorable="false">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="au.org.intersect.exsite9.commands.handlers.ExitHandler"
            id="au.org.intersect.exsite9.commands.ExitCommand"
            name="Exit">
      </command>
      <command
            defaultHandler="au.org.intersect.exsite9.commands.handlers.NewProjectHandler"
            id="au.org.intersect.exsite9.commands.NewProjectCommand"
            name="New Project">
      </command>
      <command
            id="au.org.intersect.exsite9.commands.AddFolderToProjectCommand"
            name="Add Folder to Project">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="au.org.intersect.exsite9.menu.file"
               label="File">
            <command
                  commandId="au.org.intersect.exsite9.commands.NewProjectCommand"
                  icon="icons/alt_window_16.gif"
                  label="New Project"
                  style="push"
                  tooltip="Create a new project">
            </command>
            <separator
                  name="au.org.intersect.exsite9.menu.file.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="au.org.intersect.exsite9.commands.ExitCommand"
                  label="Exit"
                  style="push"
                  tooltip="Exits the application">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="au.org.intersect.exsite9.toolbar"
               label="ToolBar">
            <command
                  commandId="au.org.intersect.exsite9.commands.NewProjectCommand"
                  icon="icons/alt_window_16.gif"
                  label="New Project"
                  style="push"
                  tooltip="Create a new project">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:au.org.intersect.exsite9.view.ProjectExplorerView">
         <command
               commandId="au.org.intersect.exsite9.commands.AddFolderToProjectCommand"
               label="Add Folder to Project"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="au.org.intersect.exsite9.expression.InstanceOfProject">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <serviceFactory
            factoryClass="au.org.intersect.exsite9.service.factory.ProjectServiceFactory">
         <service
               serviceClass="au.org.intersect.exsite9.service.IProjectService"></service>
      </serviceFactory>
      <serviceFactory
            factoryClass="au.org.intersect.exsite9.service.factory.FileServiceFactory">
         <service
               serviceClass="au.org.intersect.exsite9.service.IFileService"></service>
      </serviceFactory>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="au.org.intersect.exsite9.commands.handlers.AddFolderToProjectHandler"
            commandId="au.org.intersect.exsite9.commands.AddFolderToProjectCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="au.org.intersect.exsite9.expression.InstanceOfProject">
         <with
               variable="selection">
            <iterate
                  ifEmpty="false"
                  operator="or">
               <instanceof
                     value="au.org.intersect.exsite9.domain.Project">
               </instanceof>
            </iterate>
         </with>
      </definition>
   </extension>

</plugin>
