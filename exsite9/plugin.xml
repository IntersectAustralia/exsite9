<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="au.org.intersect.exsite9.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="au.org.intersect.exsite9.Perspective"
            id="au.org.intersect.exsite9.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="au.org.intersect.exsite9.application"
            name="ExSite9">
         <property
               name="appName"
               value="ExSite9">
         </property>
      </product>
   </extension>
   <extension
         id="product1"
         point="org.eclipse.core.runtime.products">
      <product
            application="au.org.intersect.exsite9.application"
            name="ExSite9">
         <property
               name="appName"
               value="ExSite9">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="au.org.intersect.exsite9.view.ProjectExplorerView"
            id="au.org.intersect.exsite9.view.ProjectExplorerView"
            name="Project Explorer View"
            restorable="false">
      </view>
   </extension>

</plugin>
